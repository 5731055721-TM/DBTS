<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wireless.g5.dbtsfragver.DensityChartActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/greenlc"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingTop="10dp"
                app:srcCompat="@drawable/green_location" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/redlc"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                app:srcCompat="@drawable/red_location" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="50dp">

                <ImageView
                    android:id="@+id/tail"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/tail" />

                <LinearLayout
                    android:id="@+id/first"
                    android:orientation="horizontal"
                    android:layout_width="80dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/red" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="50dp">

                <ImageView
                    android:id="@+id/mid1"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/mid" />

                <LinearLayout
                    android:id="@+id/second"
                    android:orientation="horizontal"
                    android:layout_width="80dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/green" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="50dp">

                <ImageView
                    android:id="@+id/mid2"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/mid" />

                <LinearLayout
                    android:id="@+id/third"
                    android:orientation="horizontal"
                    android:layout_width="80dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/green" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="50dp">

                <ImageView
                    android:id="@+id/head"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/head" />

                <LinearLayout
                    android:id="@+id/fourth"
                    android:orientation="horizontal"
                    android:layout_width="80dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/yellow" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            android:paddingTop="10dp">

        </LinearLayout>

        <include layout="@layout/color_indicator" />


        <TextView
            android:id="@+id/debug"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:scrollbars="vertical"
            android:textAlignment="center" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
